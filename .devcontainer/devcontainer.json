{
        "name": "OpenPI Development",
        "containerEnv": {
            "http_proxy": "${localEnv:http_proxy}",
            "https_proxy": "${localEnv:https_proxy}",
            "no_proxy": "${localEnv:no_proxy}"
          },
        "dockerComposeFile": ["../scripts/docker/compose.yml"],
        "service": "openpi_server",
        "workspaceFolder": "/app",
        "customizations": {
            "vscode": {
                "extensions": [
                    "ms-python.python",
                    "ms-toolsai.jupyter",
                    "esbenp.prettier-vscode",
                    "BazelBuild.vscode-bazel",
                    "GitHub.copilot",
                    "StackBuild.bazel-stack-vscode",
                    "ms-toolsai.datawrangler",
                    "mhutchie.git-graph",
                    "donjayamanne.githistory",
                    "GitHub.copilot-chat",
                    "VisualStudioExptTeam.vscodeintellicode",
                    "ms-toolsai.vscode-jupyter-cell-tags",
                    "ms-toolsai.jupyter-renderers",
                    "ms-toolsai.vscode-jupyter-slideshow",
                    "yzhang.markdown-all-in-one",
                    "yzane.markdown-pdf",
                    "shd101wyy.markdown-preview-enhanced",
                    "bierner.markdown-preview-github-styles",
                    "bierner.markdown-mermaid",
                    "goessner.mdmath",
                    "DavidAnson.vscode-markdownlint",
                    "ms-python.vscode-pylance",
                    "ms-python.debugpy",
                    "redhat.vscode-yaml",
                    "ms-python.autopep8",
                    "ms-python.black-formatter",
                    "ms-python.isort",
                    "ms-toolsai.jupyter-keymap",
                    "vscode-icons-team.vscode-icons",
                    "anyscalecompute.ray-distributed-debugger"
                ]
            }
        },
        "postCreateCommand": "uv venv --python 3.11.9 $UV_PROJECT_ENVIRONMENT && GIT_LFS_SKIP_SMUDGE=1 uv sync --frozen --no-install-project --no-dev && /bin/bash -c 'uv run scripts/serve_policy.py $SERVER_ARGS'" ,
        "remoteUser": "root",
        "shutdownAction": "stopCompose"
}

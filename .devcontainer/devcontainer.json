{
    "name": "OpenPI Development",
    "dockerComposeFile": [
        "../scripts/docker/compose.yml"
    ],
    "containerEnv": {
        "http_proxy": "${localEnv:http_proxy}",
        "https_proxy": "${localEnv:https_proxy}",
        "no_proxy": "${localEnv:no_proxy}",
        "UV_PROJECT_ENVIRONMENT": "/app/.venv",
        "PYTHONPATH": "/app"
    },
    "service": "openpi_server",
    "workspaceFolder": "/app",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "esbenp.prettier-vscode",
                "GitHub.copilot",
                "StackBuild.bazel-stack-vscode",
                "ms-toolsai.datawrangler",
                "mhutchie.git-graph",
                "donjayamanne.githistory",
                "GitHub.copilot-chat",
                "VisualStudioExptTeam.vscodeintellicode",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-slideshow",
                "yzhang.markdown-all-in-one",
                "yzane.markdown-pdf",
                "shd101wyy.markdown-preview-enhanced",
                "bierner.markdown-preview-github-styles",
                "bierner.markdown-mermaid",
                "goessner.mdmath",
                "DavidAnson.vscode-markdownlint",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "redhat.vscode-yaml",
                "ms-python.autopep8",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-toolsai.jupyter-keymap",
                "vscode-icons-team.vscode-icons",
                "ms-python.vscode-python-envs"
            ]
        }
    },
    "postCreateCommand": "bash -c '\
        git config --global --add safe.directory /app && \
        git config --global core.sshCommand \"ssh -i /root/.ssh/id_rsa\" && \
        git config --global user.name \"OrNot4090\" && \
        git config --global user.email \"ornot2008@yahoo.com\" && \
        uv venv --python 3.11.9 $UV_PROJECT_ENVIRONMENT && \
        echo \"export PYTHONPATH=/app\" >> ~/.bashrc && \
        echo \"source $UV_PROJECT_ENVIRONMENT/bin/activate\" >> ~/.bashrc && \
        . $UV_PROJECT_ENVIRONMENT/bin/activate && \
        GIT_LFS_SKIP_SMUDGE=1 uv sync --frozen'",
    "remoteUser": "root",
    "shutdownAction": "stopCompose"
}